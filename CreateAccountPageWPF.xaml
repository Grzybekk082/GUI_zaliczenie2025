<UserControl x:Class="GUI_zaliczenie2025.CreateAccountPageWPF"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GUI_zaliczenie2025"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" 
            
             
             >
    <Grid MaxHeight="450" MaxWidth=" 800" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="300" />
            <ColumnDefinition Width="400"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="450"/>
        </Grid.RowDefinitions>
        <Grid Grid.Column="2" Grid.Row="1"  Grid.ColumnSpan="2" MaxHeight="400" MaxWidth="800" >


            <Grid.RowDefinitions>
                <RowDefinition Height="*" MaxHeight="70"/>
                <RowDefinition Height="auto" MaxHeight="30" />
                <RowDefinition Height="auto" MaxHeight="40"/>
                <RowDefinition Height="auto" MaxHeight="40"/>
                <RowDefinition Height="auto" MaxHeight="40"/>
                <RowDefinition Height="auto" MaxHeight="40"/>
                <RowDefinition Height="auto" MaxHeight="40"/>
                <RowDefinition  Height="auto"/>
                <RowDefinition  Height="auto"/>
                <RowDefinition  Height="auto"/>
                <RowDefinition  Height="auto"/>

            </Grid.RowDefinitions>
            <Label Content="Witaj w ServiceDesk" Grid.Row="0" Grid.ColumnSpan="3" HorizontalAlignment="Center" VerticalAlignment="Top" Grid.Column="1" FontSize="18px"  FontWeight="Bold" ></Label>
            <Label x:Name="resultLabel" Content="Załóż konto " Grid.Row="0" Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Bottom" FontSize="14" Margin="10"></Label>
            <Label  Content="Administrator zatwierdzi twoją prośbę " Grid.Row="1" Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Bottom" FontSize="14" Margin="3"></Label>

            <Button  Content="Utwórz" Margin="10" Grid.Column="2" Grid.Row="8" Height="40" Width="130" Background="#FFC8C8C8" Click="Button_Send_Request_Click"/>
            <Button  Content="Wróć" Margin="10" Grid.Column="2" Grid.Row="9" Height="40" Width="130" Background="#FFC8C8C8" Click="Button_Go_back_Click"/>

            <PasswordBox x:Name="textBoxPassword"  Height="30" Width="160" Grid.Column="2" Grid.Row="2"/>
            <TextBox x:Name="textBoxName" Height="30" Width="160" Grid.Column="2" Grid.Row="3"/>
            <TextBox x:Name="textBoxSurename" Height="30" Width="160" Grid.Column="2" Grid.Row="4"/>
            <TextBox x:Name="textBoxPhoneNumber" Height="30" Width="160" Grid.Column="2" Grid.Row="5"/>
            <Label Content="Podaj Hasło" Grid.Row="2" Grid.ColumnSpan="2"  Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="14" Margin="10,10,10,10"></Label>
            <Label Content="Numer telefonu" Grid.Row="5" Grid.ColumnSpan="2"  Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="14" Margin="10,10,10,10"></Label>
            <Label Content="Podaj Imię" Grid.Row="3" Grid.ColumnSpan="2"  Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="14" Margin="10"/>
            <Label Content="Podaj Nazwisko"  Grid.Row="4" Grid.ColumnSpan="2"  Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="14" Margin="10"></Label>

            <Label x:Name="warningLabel" Content="Kontent Warninglabel" Grid.ColumnSpan="5" Grid.Row="10"  Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="14" Margin="10"></Label>

        </Grid>     

        <Image Name="MyLogo"  Grid.Column="1" Grid.Row="1" MaxHeight="350" MaxWidth="350" HorizontalAlignment="Center" VerticalAlignment="center"></Image>


    </Grid>
</UserControl>
