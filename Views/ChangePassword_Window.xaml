<Window x:Class="GUI_zaliczenie2025.Views.ChangePassword_Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI_zaliczenie2025.Views"
        mc:Ignorable="d"
        Title="ChangePassword_Window" Height="370" Width="300">
    <Grid Background="WhiteSmoke">
        <StackPanel>
            <Border Width="270" Height="40" BorderBrush="LightGray" BorderThickness="1" CornerRadius="4">
                <TextBlock Text="Wyślij prośbę o odzyskanie hasła"  TextAlignment="Center" Padding="10" 
                           Width="270" Height="40" Background="LightGray"/>
            </Border>
            <Label Content="Login technika : " Padding="10" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <TextBox x:Name="technicanLogin_TextBox" Width="200" Height="25" Background="White" TextAlignment="Center"/>

            <Label Content="Nowe hasło" Padding="10" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <PasswordBox x:Name="NewPassword_TextBox" Width="200" Height="25" Background="White" />

            <Label Content="Powtórz hasło" Padding="10" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <PasswordBox x:Name="RepeatNewPassword_TextBox" Width="200" Height="25" Background="White"/>

            <Button Width="230" Height="45" Content="Wyślij prośbę do administratora" Margin="0,35,0,0" Click="SendForChangePassword_OnClick"/>

        </StackPanel>
    </Grid>
</Window>
